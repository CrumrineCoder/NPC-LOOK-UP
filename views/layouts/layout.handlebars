<!DOCTYPE html>
<html>
<head>
	<title>NPC LOOKUP</title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  <!--   -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">  
  <link rel="stylesheet" href="/public/css/main.css" type="text/css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

      <div class="header clearfix">
        <nav>
          <ul class="right-nav">
            <li class="link-nav" role="presentation"><a href="/">NPCs</a></li>    
            {{#if user}}
              <li class="link-nav" role="presentation"><a href="/NPC/create">Create NPC</a></li>
              <li class="link-nav" role="presentation"><a href="/NPC/profile">Your NPCs</a></li>
              <li class="link-nav" role="presentation"><a href="/users/logout">Logout</a></li>
            {{else}}
              <li class="link-nav" role="presentation"><a href="/users/login">Login</a></li>
              <li class="link-nav" role="presentation"><a href="/users/register">Register</a></li>
            {{/if}}
          </ul>
            <h2>NPC LOOKUP</h2>
        </nav>
      
      </div>
    <div style="margin-top: 50px">
          
        </div>
	<div class="container">

      <div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          {{{body}}}
        </div>

        
      </div>

      <footer class="footer white">
        <p>&copy; Developed by Nicolas Crumrine</p>
      </footer>

    </div> <!-- /container -->
    
</body>
</html>